<items xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="items.xsd">

    <relations>

        <relation code="Unit2Employee" localized="false">
            <sourceElement type="B2BUnit" qualifier="b2bUnit"
                           cardinality="many">
                <modifiers read="true" write="true" search="true" />
            </sourceElement>
            <targetElement type="Employee" cardinality="one"
                           qualifier="managerAccount">
                <description>Employee-Account Manager associated to a Parent B2BUnit</description>
                <modifiers read="true" write="true" search="true" />
            </targetElement>
        </relation>
    </relations>
    <itemtypes>

        <typegroup name="SouffletItems">

            <!-- Add your item definitions here -->
            <itemtype code="MiniQuoteComponent" generate="true"
                      extends="MiniCartComponent" autocreate="true"
                      jaloclass="de.hybris.platform.acceleratorcms.jalo.components.MiniQuoteComponent">
                <description>It represents mini cart component that can be configured to show some information about cart content.</description>

            </itemtype>


            <itemtype code="MiniQuoteComponent" autocreate="false" generate="false">
                <attributes>
                    <attribute qualifier="typoCode" type="TypoCode">
                        <persistence type="property"/>
                    </attribute>
                    <attribute qualifier="category" type="Category">
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
        </typegroup>
    </itemtypes>
</items>
